<div class="issue-box">
    <div class="pic-name">
        <img src="" alt="">
        <h6>{{issues.user.name}} posted...</h6>
    </div>
    <div class="issue-full">
        <div class="issue-title">
            <h5>{{issues.title}}</h5>
        </div>
        <div class="issue-content">
            <p>{{issues.content}}</p>
        </div>
    </div>
</div>

{{#if logged_in}}
<div class="reply-box">
    <h6>Write a Response</h6>
    <textarea class="comment-field" name="input-field" id="" cols="30" rows="5"></textarea>
    <div class="field-submit-btn-box">
        <button class="btn btn-primary field-submit-btn" type="submit">Submit</button>
    </div>
</div>
{{/if}}

<div class="all-comments">
    {{#each issues.comments as |comment|}}
        <div class="comment-box">
            <h6>User posted...</h6>
            <p>{{comment.content}}</p>
        </div>
    {{/each}}
</div>

